<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingStart="38dp"
        android:paddingEnd="38dp">

        <TextView
            android:id="@+id/level_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/level_tv_1"
            android:textColor="@color/colorPrimary"
            android:textSize="52sp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/level_info_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/level_tv_1"
            android:layout_alignStart="@id/level_tv_1"
            android:layout_alignEnd="@id/level_tv_1"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_horizontal"
            android:text="@string/level_info_tv_2"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/trophy"
            android:layout_width="64dp"
            android:layout_height="72dp"
            android:layout_alignBottom="@id/level_tv_2"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/level_tv_2"
            android:paddingTop="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/trophy" />


        <TextView
            android:id="@+id/level_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingStart="0dp"
            android:paddingEnd="12dp"
            android:text="@string/level_tv_2"
            android:textColor="@color/colorPrimary"
            android:textSize="52sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/level_tv_2"
            android:layout_alignStart="@id/trophy"
            android:layout_alignEnd="@id/level_tv_2"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/awards_unlocked"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            tools:ignore="SmallSp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/level_info_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:text="@string/level_info_tv_1"
            android:textColor="@color/white" />

        <ProgressBar
            android:id="@+id/level_pb"
            style="@style/ProgressBarTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:progress="38" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/leaderboard"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="18dp"
        android:alpha="0.8"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp">

        <!-- TODO: Leaderboard section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:fontFamily="@font/poppins"
            android:text="@string/coming_soon"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/awards_achieved"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <GridLayout
        android:id="@+id/badges_gl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:columnCount="2"
        android:rowCount="1" />

</LinearLayout>