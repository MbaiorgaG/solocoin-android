<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.MarkLocationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@android:color/white"
        app:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            app:title="@string/title_myl"
            app:titleTextColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tv_notice"
        android:padding="@dimen/app_padding"
        android:gravity="center"
        android:fontFamily="@font/poppins"
        android:text="@string/tag_myl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/map_container"
        android:layout_marginStart="@dimen/app_padding"
        android:layout_marginEnd="@dimen/app_padding"
        app:layout_constraintTop_toBottomOf="@id/tv_notice"
        android:layout_width="match_parent"
        android:layout_height="280dp" >
        <fragment
            android:id="@+id/map"
            android:layout_margin="2dp"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:foreground="@drawable/accent_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tip_current_location"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/app_padding"
        android:layout_marginEnd="@dimen/app_padding"
        app:layout_constraintTop_toBottomOf="@id/map_container"
        app:startIconDrawable="@drawable/ic_location_on_accent"
        app:startIconTint="@color/colorAccent"
        android:hint="@string/hint_current_loc"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_location"
            android:drawablePadding="16dp"
            android:fontFamily="@font/poppins"
            android:focusable="false"
            android:editable="false"
            android:enabled="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/app_padding"
        android:layout_marginEnd="@dimen/app_padding"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@android:color/white"
        android:text="@string/confirm_loc"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/tip_current_location"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

</androidx.constraintlayout.widget.ConstraintLayout>